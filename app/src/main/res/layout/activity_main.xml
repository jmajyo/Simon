<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:gravity="center"
    android:background="#111111"
    tools:context="com.jmajyo.simondice.MainActivity">

    <Button
        android:id="@+id/activity_main___green_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:background="@drawable/green_button" />
    <Button
        android:id="@+id/activity_main___red_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/activity_main___green_button"
        android:layout_margin="10dp"
        android:background="@drawable/red_button"
        />
    <Button
        android:id="@+id/activity_main___yellow_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/activity_main___green_button"
        android:layout_margin="10dp"
        android:background="@drawable/yellow_button"/>
    <Button
        android:id="@+id/activity_main___blue_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/activity_main___yellow_button"
        android:layout_below="@id/activity_main___green_button"
        android:layout_margin="10dp"
        android:background="@drawable/blue_button"/>
    <Button
        android:id="@+id/activity_main___start_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_main___blue_button"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:background="#888888"
        android:layout_centerInParent="true"
        android:text="Start"
        android:textStyle="bold|italic"
        android:textSize="20sp"/>
</RelativeLayout>
